---
import Image from '~/components/common/Image.astro';
import { SITE } from 'astrowind:config';

const appleTouchIcon = '~/assets/images/apple-touch-icon.png';
---

<span
  class="flex flex-row items-center self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white"
>
  <Image width={50} aspectRatio={1} src={appleTouchIcon} alt="Google Play Image" />{SITE?.name}

  
</span>
